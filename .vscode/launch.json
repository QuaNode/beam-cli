{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Beam List",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/dist/beam.js",
      "args": [
        "list"
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "environment": [
        {
          "name": "DEBUG",
          "value": "true"
        }
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current TS File",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${file}",
      "sourceMaps": true,
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "console": "integratedTerminal"
    }
  ]
}