{
  "name": "beam-cli",
  "version": "0.0.1",
  "author": "QuaNode Team",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "app/*",
    "lib/*"
  ],
  "bin": {
    "beam": "dist/beam.js"
  },
  "main": "dist/beam.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc && node build.js",
    "build:dev": "tsc && node build.js --dev",
    "copy:backend": "cpx \"src/backend/**/*\" dist/src/backend",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/beam.js",
    "start:dev": "tsc -w",
    "start:debug": "tsc -w",
    "start:prod": "node dist/beam.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.13",
    "@nestjs/core": "^11.1.13",
    "beamjs": "latest",
    "chalk": "^4.1.2",
    "dotenv": "^17.2.4",
    "functional-chain-behaviour": "latest",
    "inquirer": "^8.2.6",
    "js-behaviours": "latest",
    "nest-commander": "^3.20.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.16",
    "@types/node": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "cpx": "^1.5.0",
    "esbuild": "^0.27.3",
    "eslint": "^8.57.0",
    "rimraf": "^5.0.10",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/app/",
      "<rootDir>/lib/"
    ]
  }
}